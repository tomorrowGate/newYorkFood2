/* find/components/find_recomend.wxss */
@import "/app.wxss";
.recomend{
  padding: 0 23rpx 30rpx;
  margin-top:16rpx; 
  box-sizing: border-box;
  background: #fff;
}
.recomend-title{
  display: flex;
  align-items: center;
  height: 104rpx;
  line-height: 104rpx;
  font-weight: bold;
}
.recomend-title::before{
  display: block;
  content: "";
  height: 30%;
  border:2rpx solid #ffac41;
  margin-right: 20rpx;
}
.recommend-imgbox{
  position: relative;
  height:330rpx;
 /*  background: #00f; */
  margin-bottom: 20rpx;
  /* border-bottom: 1rpx solid #000; */
}
.recommend-article{
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 210rpx;
  padding: 20rpx 0;
  box-sizing: border-box;
  font-size: 35rpx;
  border-bottom: 1rpx solid #dfdfdf;
}
.rec-art-left{
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  width: 504rpx;
}
.rec-art-title{
  font-size: 32rpx;
  display: -webkit-box;
-webkit-box-orient: vertical;
-webkit-line-clamp: 2;
overflow: hidden;
}
.rec-art-right{
  width: 172rpx;
  height: 166rpx;
  background: #f99;
}
.rec-art-right .imgbox{
  width: 100%;
  height: 100%;
}
.rec-art-bottom{
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
}
.nodata-yet{
  font-size: 28rpx;
}
.recommend-img-title{
  position: absolute;
  width: 100%;
  bottom: 0rpx;
  padding: 10rpx;
  background: rgba(0,0,0,0.5);
  color: #fff;
  font-size: 28rpx;
  box-sizing: border-box;
}