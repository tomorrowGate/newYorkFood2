<!--classify/components/classify_realbody.wxml-->
<view class="mapFood" id="mapFood">
  <scroll-view scroll-x class="view" wx:for="{{foodList}}" wx:key="{{index}}">
    <view class="food-list" >
      <view class="content" bindtap="goStoreDet" data-id="StoreDet">
        <view class="con-item">
          <view class="con-left">
            <view class="imgbox">
              <image src="" alt="" class="con-img"/>
            </view>
            <view class="con-say">有优惠券</view>
          </view>
          <view class="out">
            <view class="con-center">
              <view class="con-cen-title">
              阿婆家常菜 <text class="collection">收藏</text>
              </view>
              <view class="con-cen-tags">
                <view class="con-cen-tag">快餐</view>
                <view class="con-cen-tag">汉堡</view>
                <view class="con-cen-tag">烧烤</view>
              </view>
              <view class="con-cen-palce">浙江省湖州市德清县武康镇中心北路1088号</view>
              <view class="con-cen-foot">
                <view class="con-cen-foottag red">50减5</view>
                <view class="con-cen-foottag yellow">50元优惠券</view>
              </view>
            </view>
            <view class="con-right">
              <view class="con-rig-tag yellow" wx:if="{{true}}" bindtap="navigation" data-id="navigation">自动导航</view>
              <view class="con-rig-meter">
                <i class="iconfont icondingwei"></i>
                <span>500m</span>
              </view>
            </view>
          </view>
        </view>
      </view>
    </view>
    <view class="clear-collect" wx:if="{{isCollect}}"><view class="text">取消收藏</view> </view>
  </scroll-view>
</view>