/* Message/Message.wxss */
.nav{
  height: 100rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-size: 35rpx;
  border-top:4rpx solid #f5f5f5;
  border-bottom:4rpx solid #f5f5f5;
}
.notice{
  height: 100rpx;
   line-height: 100rpx;
   width: 50%;
   text-align: center;
}
.active::after{
  display: block;
  content:"";
  border: 1rpx solid #e39b37;
  width: 40%;
}
.active{
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  color: #e39b37;
}

.head{
  margin-top: 6rpx;
  border-bottom:2px solid #f5f5f5;
  border-top:2px solid #f5f5f5;
}
.row{
  height: 170rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  border-bottom: 2px solid #f5f5f5;
  font-size: 28rpx;
}
.row-imgbox{
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100rpx;
  width: 100rpx;
  border: 1px solid #f2f2f2;
  border-radius: 50%;
  background: #e39b37;
}
.row-imgbox .img{
  width: 50%;
  height: 50%;
}
.food-bulletin{
  
  height: 100rpx;
  width: 60%;
  display: flex;
  flex-direction:column;
  justify-content: space-between;
}
.row .announcement{
  font-size: 35rpx;
  font-weight: bold;
}
.preferential{
  color: #9c9c9c;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}

.punctuation{
  position: absolute;
  top:10rpx;
  right:0rpx;
  height: 16rpx;
  width: 16rpx;
  background: red;
  border-radius: 50%;
}
.time{
   height: 80rpx;
  display: flex;
  flex-direction:column;
  justify-content: space-between;
  align-items:center;
}
.nodata-index{
  height: calc(100vh - 100rpx);
  font-size: 28rpx;
  text-align: center;
}
.nodata-imgbox{
  margin:200rpx  auto 40rpx; 
}