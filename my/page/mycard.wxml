<!--my/page/mycard.wxml-->
<view class="mycard">
  <view class="mycard-h1">我的卡券</view>
  <view class="mycard-items" >
    <view class="my-card-item {{showCardT==0?'mycard-active':''}}" bindtap="showCardType" data-argu="0">
      <view class="my-card-icon"><i class="iconfont iconyuanhuan {{showCardT==0?'mycard-active':''}}"/> </view>
      <view class="my-card-txt">未使用</view>
    </view>
    <view class="my-card-item {{showCardT==1?'mycard-active':''}}" bindtap="showCardType" data-argu="1">
      <view class="my-card-icon"><i class="iconfont iconyishiyong {{showCardT==1?'mycard-active':''}}"/></view>
      <view class="my-card-txt">已使用</view>
    </view>
    <view class="my-card-item {{showCardT==2?'mycard-active':''}}" bindtap="showCardType" data-argu="2">
      <view class="my-card-icon"><i class="iconfont iconjinzhi {{showCardT==2?'mycard-active':''}}"/></view>
      <view class="my-card-txt">已过期</view>
    </view>
  </view>

  <view class="card-body">
    <view class="card-body-item {{showCardT==0?'':'gray'}}">
      <view class="card-item-up">
        <view class="card-item-imgbox">
          <image src=""></image>
        </view>
        <view class="card-item-mid">
          <view class="card-mid-top">芝芝舒芙蕾（兆丰弄店）</view>
          <view class="card-mid-tag">抵价券</view>
          <view class="card-mid-time">有效期至2019.12.30</view>
        </view>
        <view class="card-item-right">
          <view class="card-item-money"><text>￥</text> 50</view>
          <view class="card-item-filter">满100元可用</view>
        </view>
      </view>
      <view class="card-item-down">
        <view class="card-item-text">不可与满减、折扣、第二份半价活动优惠同时享受。在线支持专享。</view>
        <view class="use-rightnow" bindtap="showUseDia">立即使用</view>
        
        <view class="card-left-ball"></view>
        <view class="card-right-ball"></view>
      </view>
    </view>
  </view>

  <dialog isShowDia="{{isShowDia}}">

    <view class="dia-card">
      <view class="dia-card-top">
        <view class="dia-top-left">
          <view class="dia-left-money">￥<text>50</text></view>
          <view class="dia-left-text">满100元可用</view>
        </view>
        <view class="dia-top-right">
          <view class="dia-right-store">芝芝舒芙蕾（兆丰弄店）</view>
          <view class="dia-right-region">
            <view class="dia-right-add">武康街道祥康南路兆丰路</view> 
            <i class="iconfont " ></i>
            <text class="dia-right-m">500m</text>
          </view>
          <view class="dia-right-date">有效期：2019.11.30~2019.12.31</view>
        </view>
      </view>

      <view class="dia-card-bottom">
        <view  wx:if="{{!sureUseOne}}">
          <view class="ewm-box">
            <image src=""></image>
            <i class="iconfont iconyishiyong1" wx:if="{{showCardT==1}}"></i>
            <i class="iconfont iconyiguoqi" wx:if="{{showCardT==2}}"></i>
          </view>
          <view class="useit {{showCardT==0?'':'had-used'}}" bindtap="useitFirst">立即使用</view>
        </view>
        
        <view wx:if="{{sureUseOne}}">
          <view class="are-you-sure" >
            <text class="yeah"> 你确定要使用该优惠券吗?</text>
            <text class="sure-agin">请与商家确认后再进行本次操作</text>
          </view>
          <view class="useit {{hasUsed?'had-used':''}}" bindtap="useitSure">使用</view>
          <view class="useit had-used" bindtap="hideDia">不使用</view>
        </view>
        

        <view class="dia-ball-l"></view>
        <view class="dia-ball-r"></view>
      </view>
    </view>

  </dialog>
</view>
