/* my/page/my_index.wxss */
page{
  width: 750rpx;
  overflow-x: hidden;
  overflow-y: visible;
}
.chang-lang{
  position: absolute;
  top:20rpx;
  right:20rpx;
  width: 160rpx;
  z-index:3;
}
.changeLan-ul{
  position: relative;
  overflow: hidden;
  width: 100%;
  height: 60rpx;
  text-indent: 12rpx;
  border-radius: 30rpx;
  background: #fff;
  box-shadow: 0 0 20rpx #ccc;
}
.langs-active{
  overflow: visible;
}
.lang-item{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  text-indent: 12rpx;
  border-top:1rpx solid #efefef;
  background: #fff;
}
.changeLan-i{
  position: absolute;
  top:6px;
  right:10px;
  z-index:2
}
.my-index-mask{
  position: fixed;
  width: 100%;
  height: 100vh;
  top:0;
  left: 0;
  background: rgba(0,0,0,0.5);
  z-index:3;
}