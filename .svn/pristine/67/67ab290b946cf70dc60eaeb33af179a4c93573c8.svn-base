<!--information/personal.wxml-->
<!-- 个人信息 -->
<view class="row">
    <text class="label">{{language.personinfo[0]}}</text>
    <view class="head">
        <image class="img" src="{{portrait}}"></image>
        <!-- <i class="iconfont iconyoujiantou"></i> -->
    </view>
</view>
<view class="row">
    <text class="label">{{language.personinfo[1]}}</text>
    <view class="row-right">
        <text class="row-text">{{real_name}}</text>
        <!-- <i class="iconfont iconyoujiantou"></i> -->
    </view>
</view>
<view class="row" bindtap="goSetinfo" data-type="1">
    <text class="label">{{language.personinfo[2]}}</text>
    <view class="row-right">
        <text class="row-text">{{phone_mob||language.inputTitle[0]}}</text>
        <i class="iconfont iconyoujiantou"></i>
    </view>
</view>
<view class="row" bindtap="goSetinfo" data-type="2">
    <text class="label">{{language.personinfo[3]}}</text>
    <view class="row-right">
        <text class="row-text">{{gender||language.inputTitle[0]}}</text>
        <i class="iconfont iconyoujiantou"></i>
    </view>
</view>
<view class="row" bindtap="goSetinfo" data-type="3">
    <text class="label">{{language.personinfo[4]}}</text>
    <view class="row-right">
        <text class="row-text">{{birthday||language.inputTitle[0]}}</text>
        <i class="iconfont iconyoujiantou"></i>
    </view>
</view>
<view class="row last" bindtap="goSetinfo" data-type="4">
    <text class="label">{{language.personinfo[5]}}</text>
    <view>
        <text class="row-text row-text-area">{{sign||language.inputTitle[0]}}</text>
        <i class="iconfont iconyoujiantou"></i>
    </view>
</view>


