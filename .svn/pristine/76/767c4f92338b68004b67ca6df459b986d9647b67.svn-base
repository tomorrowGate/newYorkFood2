.head{
  height: 360rpx;
  box-sizing: border-box;
 /*  padding: 46rpx 36%; */
}
.head-imgbox{
   height: 200rpx;
  width: 200rpx;
  margin: 60rpx auto ;
}
.img{
  border: 1px solid #f2f2f2;
  border-radius: 50%;
  height: 200rpx;
  width: 200rpx;
  margin-bottom: 20rpx;
  }
.call{
  font-size: 34rpx;
  margin: 0 auto;
  text-align: center;
}
.option{
  display: flex;
  align-items: center;
 /*  height:100rpx; */
  border-bottom: 2px solid #f2f2f2;
  padding: 0 25rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  /* color: #959595; */
}
.option-label{
  font-size: 32rpx;
  margin-right: 20rpx;
}
.option .input{
  height: 80%;
}
.suggest{
  flex: 1;
  font-size: 32rpx;
  color: #959595;
  /* padding: 5rpx; */
}
.option:first-child{
  border-bottom: none;
}
.introduce{
  position: relative;
  display: flex;
 height: 300rpx;
 padding: 25rpx;

}
.word-number{
position: absolute;
right: 30rpx;
bottom: 10rpx;
}
.bg{
  border: 1px solid #f5f5f5;
  background: #f5f5f5;
  height: 100%;
}
