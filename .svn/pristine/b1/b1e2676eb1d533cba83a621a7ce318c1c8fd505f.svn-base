/* find/components/hotstore_recommend.wxss */
@import "/app.wxss";
.find .hotrecomend {
  margin-bottom: 2.77777778vw;
  padding: 0 2.31481481vw 2.77777778vw 2.31481481vw;
  background: #fff;
}
.find .hotrecomend .hotrec-title {
  height: 13.7037037vw;
  line-height: 13.7037037vw;
  font-size: 4.62962963vw;
  font-weight: bold;
  border-bottom: 1px solid #f2f2f2;
}
.find .hotrecomend .hotrec-con {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  background: #f2f2f2;
}
.find .hotrecomend .hotrec-item {
  width: 46.2962963vw;
  height: 62.03703704vw;
  font-size: 3.24074074vw;
  background: #fff;
  margin-top: 2.96296296vw;
}
.find .hotrecomend .hotrec-item .hotrec-item-imgbox {
  position: relative;
  width: 46.2962963vw;
  height: 262rpx;
  /* height: 384/@r; */
}
.find .hotrecomend .hotrec-item .hotrec-item-imgbox img {
  width: 100%;
  height: 100%;
}
.find .hotrecomend .hotrec-item .hotrec-item-text {
  padding: 1.85185185vw;
}
.find .hotrecomend .hotrec-item .hotrec-item-text .hotrec-item-foodname {
  font-size: 4.62962963vw;
  font-weight: bold;
}
.find .hotrecomend .hotrec-item .hotrec-item-text .hotrec-item-tags {
  display: flex;
  align-items: center;
  height: 6.48148148vw;
}
.find .hotrecomend .hotrec-item .hotrec-item-text .hotrec-item-tags .hotrec-item-tag {
  height: 3.88888889vw;
  line-height: 3.88888889vw;
  padding: 0 1.66666667vw;
  background: #ffe1ec;
  color: #e87363;
  margin-right: 1.85185185vw;
  border-radius: 6rpx;
}

.hotrec-item-imgbox .collection{
  position: absolute;
  top:10rpx;
  left:10rpx;
   font-size: 24rpx;
   background: #de3e22;
   color: #fff;
   padding: 0 16rpx;
   border-radius: 14rpx;
}

.hotrec-item-add{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
                  
  /* display:-webkit-box;                 
  -webkit-box-orient:vertical;          
  -webkit-line-clamp:2; */
}