<!--feedback/feedback.wxml-->
<!-- 意见反馈 -->
<view class="bg">
    <view class="guestbook">
      <textarea name="o_content" id="o_content"   data-str="content" placeholder="{{language.inputTitle[3]}}" placeholder-class="placeholderStyle" bindinput ="conentInput"></textarea>
    </view>
    <view class="phone">
      <input class="message" placeholder="{{language.inputTitle[4]}}" name="information" id="information" placeholder-class="placeholderStyle"  data-str="number" bindinput ="informationInput">
    </input>
    </view>
    
      <button class="submission" bindtap="addOpinions"  disabled="{{!canClick}}">{{language.submit}}</button>
  
</view>